{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,css,md,ts,jsx,tsx}": "prettier --write"
  },
  "scripts": {
    "build": "lerna run build",
    "prepare": "husky install",
    "preinstall": "npm i -g @wbmnky/license-report-generator",
    "postinstall": "lerna bootstrap && npm run license-report",
    "start": "lerna run --parallel start",
    "start:dev": "lerna run --parallel start:dev",
    "test": "lerna run --parallel test",
    "start:docker": "docker-compose up",
    "test:docker": "docker-compose -f docker-compose.override.yml up",
    "license-report": "license-report-generator --table true --out-file LICENSE-3RD-PARTY.txt --with-dev-dependencies true"
  }
}
